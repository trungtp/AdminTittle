
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        DASHBOARD SUMMARY
    </h1>
</section>
<br />
<!-- Main content -->
<section class="content">
    <ol class="breadcrumb dashboard-breadcrumb">
        <div class="btn-group btn-chart-data">
            <button type="button" class="btn btn-primary active" onclick="return LoadChartData(0,this);">Today @DateTime.Now.ToString("dd MMM yyyy")</button>
            <button type="button" class="btn btn-primary" onclick="return LoadChartData(1,this);">7 Days</button>
            <button type="button" class="btn btn-primary" onclick="return LoadChartData(2,this);">30 Days</button>
        </div>
    </ol>
    <div class="row">
        <div class="col-md-6">
            <!-- LINE CHART -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Total Users: <span id="TotalUsersCount"></span></h3>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <canvas id="lineChart1" style="height: 288px; width: 588px;" width="588" height="288"></canvas>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-6">
            <!-- LINE CHART -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">New Users: <span id="NewUsersCount"></span></h3>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <canvas id="lineChart2" style="height: 288px; width: 588px;" width="588" height="288"></canvas>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-6">
            <!-- LINE CHART -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Active Users: <span id="ActiveUsersCount"></span></h3>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <canvas id="lineChart3" style="height: 288px; width: 588px;" width="588" height="288"></canvas>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-6">
            <!-- LINE CHART -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Terminated Users: <span id="TerminatedUsersCount"></span></h3>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <canvas id="lineChart4" style="height: 288px; width: 588px;" width="588" height="288"></canvas>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-6">
            <!-- LINE CHART -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Total revenue: $<span id="TotalRevenueCount"></span></h3>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <canvas id="lineChart5" style="height: 288px; width: 588px;" width="588" height="288"></canvas>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-6">
            <!-- LINE CHART -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Total in-app purchases: <span id="TotalInAppCount"></span></h3>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <canvas id="lineChart6" style="height: 288px; width: 588px;" width="588" height="288"></canvas>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add-on Features</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tblAddOnFeature" class="table table-striped table-bordered text-center"></table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

