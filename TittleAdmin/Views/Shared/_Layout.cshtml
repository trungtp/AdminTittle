<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="~/Content/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Content/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/css/jquery.datatable.min.css" rel="stylesheet" />
    <link href="~/Content/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/css/fixedheader.min.css" rel="stylesheet" />    
    <link href="~/Content/css/fixedColumn.min.css" rel="stylesheet" />
    <link href="~/Content/css/select.min.css" rel="stylesheet" />
    <link href="~/Content/pace/pace.min.css" rel="stylesheet" />
    <!-- daterange picker -->
    <link rel="stylesheet" href="~/Content/bootstrap-daterangepicker/daterangepicker.css">        
    <!-- bootstrap datepicker -->
    <link href="~/Content/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <!-- Select2 -->
    <link rel="stylesheet" href="~/Content/select2/select2.min.css">
    <!-- Theme style -->
    <link href="~/Content/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/css/skins/skin-purple.min.css" rel="stylesheet" />  
    <link href="~/Content/css/skins/skin-purple-light.min.css" rel="stylesheet" />    
    <!-- Site style -->
    <link href="~/Content/css/site.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<!-- ADD THE CLASS layout-top-nav TO REMOVE THE SIDEBAR. -->
<body class="sidebar-mini skin-purple">
    <div class="wrapper">
        <header class="main-header">
                <!-- Logo -->
                <a href="/dashboard" class="logo">
                    <!-- mini logo for sidebar mini 50x50 pixels -->
                    <span class="logo-mini"><img src="~/Content/img/logo_tittle_small.png" height="36" /></span>
                    <!-- logo for regular state and mobile devices -->
                    <span class="logo-lg"><img src="~/Content/img/logo_tittle_web.png" height="36" /></span>
                </a>
                <nav class="navbar navbar-static-top">
                    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                        <span class="sr-only">Toggle navigation</span>
                    </a>
                    <div id="messageContainer"></div>
                    <!-- Navbar Right Menu -->
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            <!-- User Account Menu -->
                            <li class="dropdown user user-menu">
                                <!-- Menu Toggle Button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <!-- The user image in the navbar-->
                                    <img src="~/Content/img/avatar5.png" class="user-image" alt="User Image">
                                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                    <span class="hidden-xs">Admin</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- The user image in the menu -->
                                    <li class="user-header">
                                        <img src="/Content/img/avatar5.png" class="img-circle" alt="User Image">
                                        <p>
                                            Tittle - Admin
                                        </p>
                                    </li>
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                        </div>
                                        <div class="pull-right">
                                            @using (Html.BeginForm("UserLogout", "Login", FormMethod.Post))
                                            {
                                                <button type="submit" class="btn btn-default btn-flat">Sign out</button>
                                            }
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-custom-menu -->
                </nav>
            </header>
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar" style="height: auto;">
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu tree" data-widget="tree">
                    <li>&nbsp;</li>
                    <li class="active">
                        <a href="/dashboard">
                            <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/promocode">
                            <i class="fa fa-flag"></i>
                            <span>Promo Codes</span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="javascript:void(0);">
                            <i class="fa fa-tasks"></i> 
                            <span>Perk Tasks</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/user-tasks"><i class="fa fa-circle-o"></i> User Task</a></li>
                            <li><a href="/user-redeems"><i class="fa fa-circle-o"></i> Redeem Users</a></li>
                            <li><a href="/redeems"><i class="fa fa-circle-o"></i> Redemption Gift</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/report">
                            <i class="fa fa-laptop"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                    <li>
                        <a href="/notification">
                            <i class="fa fa-bell"></i>
                            <span>Notification</span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="javascript:void(0);">
                            <i class="fa fa-columns"></i>
                            <span>KPI Report</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/user-dashboard"><i class="fa fa-circle-o"></i> Report Dashboard</a></li>
                            <li><a href="/user-plans"><i class="fa fa-circle-o"></i> User Plans</a></li>
                            <li><a href="/user-actions"><i class="fa fa-circle-o"></i> User Action</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/language">
                            <i class="fa fa-language"></i>
                            <span>Language</span>
                        </a>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Full Width Column -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="container text-center">
                <strong>Copyright &copy; @DateTime.Now.Year Tittle.</strong> All rights
                reserved.
            </div>
            <!-- /.container -->
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 3 -->
    <script src="@Url.Content("~/Content/jquery/jquery.min.js")"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="@Url.Content("~/Content/bootstrap/dist/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Content/jquery/jquery.validate.unobtrusive.min.js")"></script>
    <!-- SlimScroll -->
    <script src="@Url.Content("~/Content/jquery-slimscroll/jquery.slimscroll.min.js")"></script>
    <!-- FastClick -->
    <script src="@Url.Content("~/Content/fastclick/lib/fastclick.js")"></script>
    <!-- AdminLTE App -->
    <script src="@Url.Content("~/Content/js/adminlte.min.js")"></script>
    <!-- Chart Js -->
    <script src="@Url.Content("~/Content/chart/Chart.min.js")"></script>    
    <!-- DataTables -->
    <script src="@Url.Content("~/Content/datatables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Content/datatables/dataTables.responsive.min.js")"></script>  
    <script src="@Url.Content("~/Content/datatables/dataTable.fixedHeader.min.js")"></script>    
    <script src="@Url.Content("~/Content/datatables/datatable.fixedColumn.min.js")"></script>
    <script src="@Url.Content("~/Content/datatables/datatable.select.min.js")"></script>
    <!-- Select2 -->
    <script src="@Url.Content("~/Content/select2/select2.full.min.js")"></script>
    <!-- date-range-picker -->
    <script src="@Url.Content("~/Content/bootstrap-daterangepicker/moment.min.js")"></script>
    <script src="@Url.Content("~/Content/bootstrap-daterangepicker/daterangepicker.js")"></script>
    <script src="@Url.Content("~/Content/bootstrap-datepicker/bootstrap-datepicker.min.js")"></script>
    <!-- Pace Loader -->
    <script src="@Url.Content("~/Content/pace/pace.min.js")"></script>    

    <script src='//cdn.tinymce.com/4/tinymce.min.js'></script>
    <!-- Editable table Js -->
    <script src="@Url.Content("~/Content/mindmup-editabletable.js")"></script>
    <!-- Notify -->
    <script src="@Url.Content("~/Content/bootstrap-notify.min.js")"></script>
    <!-- Site Js -->
    <script src="@Url.Content("~/Content/js/site.js")"></script>
</body>
</html>